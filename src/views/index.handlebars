<div id="carouselHome" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {{#each slides}}
    <li data-target="#carouselHome" data-slide-to="{{this.idx}}" class="{{#if this.status}} active{{/if}}"></li>
    {{/each}}
  </ol>
  <div class="carousel-inner">
    {{#each slides}}
    <div class="carousel-item {{#if this.status}} active{{/if}} ">
      <img src="/assets/uploads/{{this.photo}}" class="d-block w-100 img-fluid" alt="..." style="height: 750px;">
      <div class="carousel-caption d-none d-md-block">
        <h5>{{this.title}}</h5>
        <p>{{this.sub}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#carouselHome" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselHome" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<style>
  .box-specs {
    background-color: goldenrod;
    color: #fff;
    padding: 30px;
    margin: 20px;
    border-radius: 4px;
    text-transform: uppercase;
    text-align: center;
    font-weight: 400;
    transition: all 0.4s ease-in-out;
  }

  .box-specs:hover {
    transform: scaleX(1.1) scaleY(1.3);
    background-color: #333;
    color: #fff;
  }
</style>



<div class="container ">
