<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Usuário
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Admin</a></li>
    <li class="active">Users</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <a href="/admin/users/new" class="btn btn-default" style="margin-bottom: 20px;">Adicionar</a>
      <div class="box">
        <!-- /.box-header -->
        <div class="box-body">
          <table id="example1" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Password</th>
                <th>Photo</th>
                <th>Admin</th>
                <th>Atualizar</th>
                <th>Remover</th>
              </tr>
            </thead>
            <tbody>

              {{#if user.admin }}
              {{#each users }}
              <tr>
                <td>{{this._id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td class="text-center">
                  {{#if this.password}}
                  <strong>
                    <i class="fa fa-key fa-2x"></i>
                  </strong>

                  {{/if}}

                </td>
                <td>
                  <img src="assets/uploads/{{this.photo}}" width="50" height="50" />
                </td>
                <td>

                  {{#if this.admin}}
                  <strong>Sim</strong>
                  {{else}}
                  <strong>Não</strong>
                  {{/if}}

                </td>
                <td class="">
                  <a href="/admin/users/{{this._id}}" class="btn  btn-block btn-flat">
                    <i class="fa fa-edit text-primary fa-2x"></i>
                  </a>
                </td>
                <td>
                  <form method="POST" action="/admin/users/{{this._id}}/remove">
                    <button style="background-color: transparent; border: none;" type="submit"
                      class="btn  btn-block btn-flat">
                      <i class="fa fa-trash text-danger fa-2x"></i>
                    </button>
                  </form>
                </td>
              </tr>
              {{/each}}
              {{else}}
              develoment
              <tr>
                <td>{{user._id}}</td>
                <td>{{user.name}}</td>
                <td>{{user.email}}</td>
                <td class="text-center">
                  {{#if user.password}}
                  <strong>
                    <i class="fa fa-key fa-2x"></i>
                  </strong>

                  {{/if}}

                </td>
                <td>
                  <img src="assets/uploads/{{user.photo}}" width="50" height="50" />
                </td>
                <td>

                  {{#if user.admin}}
                  <strong>Sim</strong>
                  {{else}}
                  <strong>Não</strong>
                  {{/if}}

                </td>
                <td class="">
                  <a href="/admin/users/{{user._id}}" class="btn  btn-block btn-flat">
                    <i class="fa fa-edit text-primary fa-2x"></i>
                  </a>
                </td>
                <td>
                  <form method="POST" action="/admin/users/{{user._id}}/remove">
                    <button style="background-color: transparent; border: none;" type="submit"
                      class="btn  btn-block btn-flat">
                      <i class="fa fa-trash text-danger fa-2x"></i>
                    </button>
                  </form>
                </td>
              </tr>

              {{/if}}

            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>