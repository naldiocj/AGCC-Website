<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <!-- /.box-header -->
        <div class="box-body">
          <div class="box-body">
            <h4>Editar Marca</h4>
            <form role="form" method="POST" enctype="multipart/form-data" action="/admin/brand/{{data._id}}/update">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Nome *</label>
                  <input type="text" value="{{data.name}}" name="name" class="form-control" id="exampleInputEmail1"
                    placeholder="Nome">
                </div>
                <div class="form-group">
                  <label for="exampleInputFile">Imagem *</label>
                  <input type="file" multiple value="{{data.photo}}" name="photo" id="exampleInputFile">
                </div>

                <div class="box-footer">
                  <div class="form-group">
                    <a href="/admin/brand" class="btn btn-default pull-left">Cancelar</a>
                    <button type="submit" class="btn btn-primary pull-right">Atualizar</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>