<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <!-- /.box-header -->
        <div class="box-body">
          <div class="box-body">
            <h4>Editar Produtos</h4>
            <form role="form" method="POST" enctype="multipart/form-data" action="/admin/product/{{data._id}}/update">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Nome *</label>
                  <input type="text" value="{{data.name}}" name="name" class="form-control" id="exampleInputEmail1"
                    placeholder="Nome">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Preço *</label>
                  <input type="text" value="{{data.price}}" name="price" class="form-control" id="exampleInputEmail1"
                    placeholder="Preço">
                </div>
                <div class="form-group">
                  <label for="exampleInputFile">Imagem *</label>
                  <input type="file" value="{{data.photo}}" multiple name="photo" id="exampleInputFile">
                </div>
                <div class="form-group">
                  <label>Marcas</label>
                  <select value="{{data.brand.name}}" name="brand" class="form-control">
                    {{#each brands}}
                    <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                  </select>
                </div>

                <div class="box-footer">
                  <div class="form-group">
                    <a href="/admin/product" class="btn btn-default pull-left">Cancelar</a>
                    <button type="submit" class="btn btn-primary pull-right">Salvar</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>


