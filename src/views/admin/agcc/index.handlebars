<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    AGCC
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Admin</a></li>
    <li class="active">Brand</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row ">
    <div class="col-xs-12 center">
      <div class="box">
        <!-- /.box-header -->
        <div class="box-body">
          <h4>Quem somos</h4>
          <form role="form" method="POST" enctype="multipart/form-data" action="/admin/agcc/{{agcc._id}}">
            <div class="box-body">

              <div class="form-group">
                <label>Descrição *</label>
                <textarea name="description" class="form-control" rows="5" placeholder="Descrição">{{agcc.description}}
                </textarea>
              </div>
              <div class="form-group">
                <label for="exampleInputFile">Imagem *</label>
                <div class="form-group">
                  <img src="assets/uploads/{{agcc.photo}}" width="200" height="200" alt="" srcset="">
                </div>
                <input type="file" value="{{agcc.photo}}" multiple value="" name="photo" id="exampleInputFile">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Missão *</label>
                <input type="text" name="mission" value="{{agcc.mission}}" class="form-control" id="exampleInputEmail1"
                  placeholder="Missão">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Visão *</label>
                <input type="text" value="{{agcc.eyesight}}" name="eyesight" class="form-control"
                  id="exampleInputEmail1" placeholder="Visão">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Valores *</label>
                <input type="text" value="{{agcc.values}}" name="values" class="form-control" id="exampleInputEmail1"
                  placeholder="Valores">
              </div>
              <div class="box-footer">
                <div class="form-group">
                  <button type="submit" class="btn btn-primary pull-right">Publicar</button>
                </div>
              </div>
            </div>

          </form>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>