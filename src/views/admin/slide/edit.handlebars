<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <!-- /.box-header -->
        <div class="box-body">
          <div class="box-body">
            <h4>Editar Slide</h4>
            <form role="form" method="POST" enctype="multipart/form-data" action="/admin/slide/{{slide._id}}/update">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Título *</label>
                  <input type="text" value="{{slide.title}}" name="title" class="form-control" id="exampleInputEmail1"
                    placeholder="Título">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Descrição *</label>
                  <input type="text" value="{{slide.sub}}" name="sub" class="form-control" id="exampleInputEmail1"
                    placeholder="Descrição">
                </div>
                <div class="form-group">

                  {{#if slide.status}}
                  <strong>Slide ctivo</strong>
                  {{else}}
                  <label for="">
                    Ativar slide
                  </label>
                  <div class="checkbox">
                    <label>
                      <input name="status" value="true" type="checkbox"> sim ?
                    </label>
                  </div>
                  {{/if}}

                </div>
                <div class="form-group">
                  <label for="exampleInputFile">Imagem *</label>
                  <input value="{{slide.photo}}" type="file" multiple name="photo" id="exampleInputFile">
                </div>
                <div class="box-footer">
                  <div class="form-group">
                    <a href="/admin/slide" class="btn btn-default pull-left">Cancelar</a>
                    <button type="submit" class="btn btn-primary pull-right">Publicar</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>