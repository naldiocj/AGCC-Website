<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <!-- /.box-header -->
        <div class="box-body">
          <div class="box-body">
            <h4>Editar Certificações</h4>
            <form role="form" method="POST" enctype="multipart/form-data"
              action="/admin/certification/{{certification._id}}/update">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Nome *</label>
                  <input type="text" value="{{certification.name}}" name="name" class="form-control"
                    id="exampleInputEmail1">
                </div>
                <div class="form-group">
                  <label for="exampleInputFile">Imagem *</label>
                  <input value="{{certification.photo}}" type="file" multiple name="photo" id="exampleInputFile">
                </div>
                <div class="box-footer">
                  <div class="form-group">
                    <a href="/admin/certification" class="btn btn-default pull-left">Cancelar</a>
                    <button type="submit" class="btn btn-primary pull-right">Publicar</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>