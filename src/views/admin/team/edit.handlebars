<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <!-- /.box-header -->
        <div class="box-body">
          <div class="box-body">
            <h4>Editar colaborador a equipa de trabalho</h4>
            <form role="form" method="POST" enctype="multipart/form-data" action="/admin/team/{{team._id}}/update">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Nome *</label>
                  <input type="text" value="{{team.name}}" name="name" class="form-control" id="exampleInputEmail1"
                    placeholder="Nome">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Cargo *</label>
                  <input type="text" value="{{team.role}}" name="role" class="form-control" id="exampleInputEmail1"
                    placeholder="Cargo">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Grau académico *</label>
                  <input type="text" value="{{team.degree}}" name="degree" class="form-control" id="exampleInputEmail1"
                    placeholder="Grau académico">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email *</label>
                  <input type="email" value="{{team.email}}" name="email" class="form-control" id="exampleInputEmail1"
                    placeholder="E-mail">
                </div>
                <div class="form-group">
                  <label for="exampleInputFile">Imagem </label>
                  <input type="file" value="{{team.photo}}" multiple name="photo" id="exampleInputFile">
                </div>
                <div class="box-footer">
                  <div class="form-group">
                    <a href="/admin/team" class="btn btn-default pull-left">Cancelar</a>
                    <button type="submit" class="btn btn-primary pull-right">Publicar</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>