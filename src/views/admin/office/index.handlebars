<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Office
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Admin</a></li>
    <li class="active">Office</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row ">
    <div class="col-xs-12 center">
      <div class="box">
        <!-- /.box-header -->
        <div class="box-body">
          <h4>Office</h4>
          <form role="form" method="POST" action="/admin/office/{{office._id}}">
            <div class="box-body">
              <div class="form-group">
                <label for="exampleInputEmail1">Nossos Serviços *</label>
                <input type="text" name="service" value="{{office.service}}" class="form-control"
                  id="exampleInputEmail1">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Notícias *</label>
                <input type="text" value="{{office.portfolio}}" name="portfolio" class="form-control"
                  id="exampleInputEmail1">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Equipa de Trabalho *</label>
                <input type="text" value="{{office.team}}" name="team" class="form-control" id="exampleInputEmail1">
              </div>
              <h4>Contactos Page</h4>

              <div class="form-group">
                <label for="exampleInputEmail1">Hora de atendimento *</label>
                <input type="text" value="{{office.serviceTime}}" name="serviceTime" class="form-control"
                  id="exampleInputEmail1">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Localização *</label>
                <input type="text" value="{{office.location}}" name="location" class="form-control"
                  id="exampleInputEmail1">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Escritório *</label>
                <input type="text" value="{{office.office}}" name="office" class="form-control" id="exampleInputEmail1">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Telefone *</label>
                <input type="text" value="{{office.tel}}" name="tel" class="form-control" id="exampleInputEmail1">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">E-mail *</label>
                <input type="text" value="{{office.email}}" name="email" class="form-control" id="exampleInputEmail1">
              </div>


              <div class="box-footer">
                <div class="form-group">
                  <button type="submit" class="btn btn-primary pull-right">Publicar</button>
                </div>
              </div>
            </div>

          </form>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>